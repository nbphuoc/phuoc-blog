<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Phuoc's Blog</h1>
  <h3>My first Rails Application for CoderSchool!</h3>

  <div class="row">
    <div class="col-sm-8">
      <%= form_tag(articles_path, :method => "get", class: "form-inline", id: "search-form") do %>
        <div class="form-group">
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Articles" %>
        </div>
        <button class="btn btn-primary" type="submit">Search</button>
      <% end %>
    </div>
  </div>

  <br>

  <%= render @articles %>

  <br>
  <%= link_to 'New Article', new_article_path %>
</div>
